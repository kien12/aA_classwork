<h1>New Cat</h1>

<form action="<%=cats_url(@cat)%>" method="POST">
    <input type="hidden" name= "_method" value="POST">

    <label for="cat_name">name</label>
    <input 
        type="text"
        name="cat[name]"
        id="cat_name"
        value="<%= @cat.name %>">
    
    <label for="cat_birth_date">Birth Date</label>
    <input 
        type="date"
        name="cat[birth_date]"
        id="cat_birth_date"
        value="<%= @cat.birth_date %>">

    <label for="cat_colors">Color</label>
    <select name="cat[color]" id="cat_color">
        <option disabled selected>-- select color --</option>
        <%Cat::COLORS.each do |color| %>
            <option 
            <%= @cat.color == color ? "selected" : "" %>
            value="<%=color%>">
            <%= color.upcase %>
            </option>
            <% end %> 
    </select>
        
    <input 
        type="radio"
        name="cat[sex]"
        id="cat_sex_male"
        value="M"
        <%= @cat.sex == "M" ? "checked" : "" %>>
    <label for="cat_sex_male">Male</label>
    <input 
        type="radio"
        name="cat[sex]"
        id="cat_sex_female"
        value="M"
        <%= @cat.sex == "F" ? "checked" : "" %>>
    <label for="cat_sex_female">Female</label>
    <br>
    <br>
    <label>
    Description
    <textarea name="Cat[description]"><%= @cat.description %> </textarea>
    </label>

    <input type="submit" value="Create new Cat">
</form>
